@model IEnumerable<MarcaTexto.Texto>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Texto</h1>

<p>
    <a asp-action="Create">Cadastrar Novo Texto.</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Texto1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Texto2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Texto1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Texto2)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
